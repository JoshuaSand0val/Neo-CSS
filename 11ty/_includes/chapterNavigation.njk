{% if chapterNavigation %}
<ul class="chapter-navigation">
{%- for name, link in chapterNavigation or nav[chapterNavigation] %}
    {% if page.url == link %}
    <li><a href="{{ link | url }}" aria-current="page"><b>{{ name }}</b></a></li>
    {% else %}
    <li><a href="{{ link | url }}">{{ name }}</a></li>
    {% endif %}
{% endfor -%}
</ul>
{% endif %}