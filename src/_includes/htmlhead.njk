<title>
    {% if title %}
        {{ title }} | {{ metadata.title }}
    {% else %}
        {{ metadata.title }}
    {% endif %}
</title>
<meta charset="UTF-8" />
<!-- Metadata -->
<meta name="author" content="{{ metadata.author }}" />
<meta name="description" content="{{ metadata.description }}" />
<meta name="keywords" content="{{ metadata.keywords }}" />
<!-- Shortcut favicon: -->
<link rel="shortcut icon" href="/assets/images/logo/favicon.ico" type="image/x-icon" />
<!-- Apple -->
<link rel="apple-touch-icon-precomposed" href="/assets/images/logo/appicon.png" />
<!-- Stylesheet -->
<link rel="stylesheet" type="text/css" href="/assets/css/main.css" />
<!-- Apple Watch OS5 WebKit support!!! -->
<meta name="disabled-adaptations" content="watch" />
<!-- Initial viewport for mobile (including irregular displays): -->
<meta name="viewport" content="user-scalable=yes, width=device-width, initial-scale=1.0, viewport-fit=cover" />